      <li><a href='/celebrities/{{_id}}'>{{name}}</a></li>
      <form action='/celebrities/{{_id}}/delete' method='POST'><button
        >Delete</button></form>
    {{/each}}

  </ul>

  <a href='/celebrities/create'>Create a new celebrity</a>
  <a href='/celebrities/show'>Edit an existing celebrity</a>

</div>